<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpFragment">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:background="#000" />

    <Button
        android:id="@+id/take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_centerInParent="true"
        android:text="Take Photo(Landscape Recommended)"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/take_photo"
        android:text="Work For FOOD"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/work"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv1"
        android:hint="example-Gardening,washing,farming etc" />

    <EditText
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/work"
        android:hint="Contact Number:" />

    <Button
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact"
        android:hint="Click to set Location"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact"
        android:layout_alignRight="@id/location"
        android:layout_margin="10dp" />

    <EditText
        android:id="@+id/set_location"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/location"
        android:hint="edit Location" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_location"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textAllCaps="false" />


</RelativeLayout>